---
import { Card } from 'webcoreui/astro';

interface Props {
    title: string;
    excerpt: string;
    date: string;
    modalId: string | null;
    index: number;
}

const { title, excerpt, date, modalId, index } = Astro.props;
---

<button 
    class={`blog-card-link ${modalId ? `trigger-${modalId}` : ''}`}
    type="button"
>
    <article class="blog-card" style={`--delay: ${index * 0.1}s`}>
        <Card className="blog-card-inner">
            <div class="blog-card-content">
                <time class="blog-card-date">{date}</time>
                <h3 class="blog-card-title">{title}</h3>
                <p class="blog-card-excerpt">{excerpt}</p>
            </div>
        </Card>
    </article>
</button>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .blog-card-link {
        display: block;
        text-decoration: none;
        color: inherit;
        background: none;
        border: none;
        padding: 0;
        font: inherit;
        cursor: pointer;
        text-align: left;
        width: 100%;
    }

    .blog-card {
        height: 100%;
        animation: fadeInUp 0.5s ease-out backwards;
        animation-delay: var(--delay, 0s);
    }

    .blog-card-inner {
        height: 100%;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .blog-card-link:hover .blog-card-inner {
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
    }

    .blog-card-content {
        padding: 0.25rem;
    }

    .blog-card-date {
        font-size: 0.875rem;
        color: var(--w-color-primary-50);
        display: block;
        margin-bottom: 0.5rem;
    }

    .blog-card-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--w-color-primary);
        margin: 0 0 0.5rem;
        line-height: 1.3;
    }

    .blog-card-excerpt {
        font-size: 0.9375rem;
        color: var(--w-color-secondary-70);
        line-height: 1.6;
        margin: 0;
    }
</style>
