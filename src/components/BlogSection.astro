---
import BlogCard from './BlogCard.astro';

interface BlogPost {
    title: string;
    excerpt: string;
    date: string;
    modalId: string | null;
}

interface Props {
    title: string;
    posts: BlogPost[];
}

const { title, posts } = Astro.props;
---

<section class="blog-section">
    <h2 class="blog-title bubble-heading">{title}</h2>
    <div class="blog-grid">
        {posts.map((post, index) => (
            <BlogCard 
                title={post.title}
                excerpt={post.excerpt}
                date={post.date}
                modalId={post.modalId}
                index={index}
            />
        ))}
    </div>
</section>

<style>
    .blog-section {
        padding: 2rem 0 4rem;
    }

    .blog-title {
        font-size: 1.5rem;
        margin: 0 0 2rem;
    }

    .blog-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        align-items: start;
    }

    @media (max-width: 700px) {
        .blog-grid {
            grid-template-columns: 1fr;
        }

        .blog-title {
            margin: 0 auto 2rem;
            text-align: center;
        }
    }
</style>
