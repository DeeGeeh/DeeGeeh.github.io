---
import { Button } from 'webcoreui/astro';
import { Image } from 'astro:assets';

interface Props {
    image: ImageMetadata;
    name: string;
    bio: string;
    companyName: string;
    companyUrl: string;
    linkedInUrl: string;
    githubUrl: string;
}

const { image, name, bio, companyName, companyUrl, linkedInUrl, githubUrl } = Astro.props;
---

<section class="hero">
    <div class="hero-photo">
        <Image src={image} alt={name} />
    </div>
    <div class="hero-content">
        <h1 class="hero-name bubble-heading">{name}</h1>
        <p class="hero-bio">
            <Fragment set:html={bio} />
            <a data-tooltip="Click for LinkedIn" class="company-link" href={companyUrl}>{companyName}</a>
            trying to improve PISA scores.
        </p>
        <div class="hero-cta">
            <Button 
                href={linkedInUrl}
                target="_blank"
                theme="info"
                data-tooltip="Let's connect!"
                data-position="bottom"
            >
                LinkedIn
            </Button>
            <Button 
                href={githubUrl}
                target="_blank"
                data-tooltip="Check out my abandoned projects!"
                data-position="bottom"
            >
                GitHub
            </Button>
        </div>
    </div>
</section>

<style>
    @reference "tailwindcss";

    .hero {
        display: grid;
        grid-template-columns: 220px 1fr;
        gap: 3rem;
        align-items: center;
        padding: 4rem 0 5rem;
        animation: fadeInUp 0.6s ease-out;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-photo {
        justify-self: center;
        background: #ffb9b9;
        padding: 8px;
        border-radius: var(--w-lg-radius);
        border: 1px solid var(--w-color-primary-50);
        box-shadow: 
            0 4px 6px -1px rgba(0, 0, 0, 0.1), 
            0 2px 4px -1px rgba(0, 0, 0, 0.06),
            0 0 0 1px rgba(0, 0, 0, 0.05);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .hero-photo:hover {
        transform: translateY(-8px) rotate(-1deg);
        box-shadow: 
            0 20px 25px -5px rgba(0, 0, 0, 0.1), 
            0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .hero-photo img {
        width: 100%;
        height: auto;
        border-radius: calc(var(--w-lg-radius) - 6px);
        display: block;
        object-fit: cover;
    }

    .hero-content {
        max-width: 600px;
    }

    .hero-name {
        font-size: clamp(2rem, 5vw, 3rem);
        margin: 0 0 1rem;
    }

    .hero-bio {
        font-size: 1.125rem;
        line-height: 1.7;
        margin: 0 0 1.5rem;
    }

    .company-link {
        @apply text-blue-900 bg-sky-200 rounded-md p-1 hover:bg-sky-300 hover:text-blue-950 hover:underline transition-colors duration-200;
    }

    .hero-cta {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    @media (max-width: 700px) {
        .hero {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2rem;
        }

        .hero-photo {
            justify-self: center;
            max-width: 180px;
        }

        .hero-name {
            margin-right: 0;
        }

        .hero-content {
            max-width: 100%;
        }

        .hero-cta {
            justify-content: center;
        }
    }
</style>
